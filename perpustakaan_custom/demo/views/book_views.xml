<odoo>
    <!-- List View -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="author"/>
                <field name="published_date"/>
                <field name="quantity"/>
                <field name="borrowed_by_names"/>
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="cover_image" widget="image" class="oe_avatar"
                            options="{'preview_image': 'cover_image'}"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="author"/>
                        <field name="published_date"/>
                        <field name="quantity"/>
                        <field name="borrowed_by_names" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Borrowed by Students">
                            <field name="borrowed_by_student_ids">
                                <list>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                        <page string="Borrowed by Teachers">
                            <field name="borrowed_by_teacher_ids">
                                <list>
                                    <field name="name"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_root" name="Perpustakaan"/>
    <menuitem id="menu_library_book" name="Books" parent="menu_library_root" action="action_library_book"/>
</odoo>
