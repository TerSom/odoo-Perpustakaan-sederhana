<odoo>
    <!-- Tree (List) View -->
    <record id="view_library_book_list" model="ir.ui.view">
        <field name="name">library.book.list</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <list string="Books">
                <field name="name" />
                <field name="author" />
                <field name="published_date" />
                <field name="quantity" />
            </list>
        </field>
    </record>

    <!-- Form View -->
    <record id="view_library_book_form" model="ir.ui.view">
        <field name="name">library.book.form</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <form string="Book Form">
                <sheet>
                    <group>
                        <field name="cover_image" widget="image" class="oe_avatar"
                            options="{'preview_image': 'cover_image'}" />
                    </group>
                    <group>
                        <field name="name" />
                        <field name="author" />
                        <field name="published_date" />
                        <field name="quantity" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- kanban views -->
    <record id="view_library_book_kanban" model="ir.ui.view">
        <field name="name">library.book.kanban</field>
        <field name="model">library.book</field>
        <field name="arch" type="xml">
            <kanban>
                <template>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card">
                            <div class="o_kanban_image">
                                <img
                                    t-att-src="kanban_image('library.book', 'cover_image', record.id.raw_value)"
                                    alt="book image" />
                            </div>
                            <div>
                                <div style="display: flex; gap:5px;">
                                    <p>Nama Buku : </p>
                                    <field name="name" />
                                </div>
                                <div style="display: flex; gap:5px;">
                                    <p>Nama Author : </p>
                                    <field name="author" />
                                </div>
                                <div style="display: flex; gap:5px;">
                                    <p>Prilisan : </p>
                                    <field name="published_date" />
                                </div>
                                <div style="display: flex; gap:5px;">
                                    <p>quantity : </p>
                                    <field name="quantity" />
                                </div>
                            </div>
                        </div>
                    </t>
                </template>
            </kanban>
        </field>
    </record>

    <!-- Action -->
    <record id="action_library_book" model="ir.actions.act_window">
        <field name="name">Books</field>
        <field name="res_model">library.book</field>
        <field name="view_mode">list,form,kanban</field>
    </record>

    <!-- Menu -->
    <menuitem id="menu_library_root" name="Perpustakaan" />
    <menuitem id="menu_library_book" name="Books"
        parent="menu_library_root"
        action="action_library_book" />
</odoo>